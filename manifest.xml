<Wallpaper  src="mohutu/1920w.jpg"/>
	<Var name="g" expression="8" const="true"/>

	<ExternalCommands>      
		<Trigger action="resume">
			<VariableCommand name="yzhou"  expression="0"/>
			<VariableCommand name="yzhou1" expression="-600"/>
			<VariableCommand name="yzhou2" expression="-800"/>
			<VariableCommand name="yzhou3" expression="-100"/>
			<VariableCommand name="yzhou4" expression="-400"/>
			<VariableCommand name="yzhou5" expression="-200"/>
			<VariableCommand name="vy"  expression="60"/>
			<VariableCommand name="vy1" expression="60"/>
			<VariableCommand name="vy2" expression="60"/>
			<VariableCommand name="vy3" expression="60"/>
			<VariableCommand name="vy4" expression="60"/>
			<VariableCommand name="vy5" expression="60"/>
			<SoundCommand sound="kong.mp3" volume="0" keepCur="false" />

		</Trigger>
		<Trigger action="pause">
			<VariableCommand name="kais1" expression="1"/>
			<VariableCommand name="keyi" expression="0"/>
			<VariableCommand name="yx" expression="0"/>
			<VariableCommand name="bofan" expression="0" />
			<Command target="gan.visibility" value="false"/> 
			<Command target="hua.visibility" value="false"/> 
			<Command target="wanju.visibility" value="false"/> 
			<SoundCommand sound="kong.mp3" volume="0" keepCur="false" />
		</Trigger>
	</ExternalCommands>

	<Var name="yinxiao" expression="eq(#kais,0)*#keyi" threshold="1"  >
		<Trigger>
			<VariableCommand name="yx" expression="not(#yx)" condition="eq(#keyi,0)"/> 
		</Trigger>
	</Var>
	<Var name="yinxiao1" expression="#yx" threshold="1"  >
		<Trigger>
			<SoundCommand sound="yinxiao_2.mp3" volume="1" keepCur="false" />
			<VariableCommand name="bofan" expression="0" />
		</Trigger>
	</Var>
	<Var name="yinxiao2" expression="#yxxx" threshold="1"  >
		<Trigger>
			<VariableCommand name="bofan" expression="1" />
			<SoundCommand sound="yinxiao_1.mp3" volume="1" loop="true" keepCur="false" />
		</Trigger>
	</Var>

	<Var name="kongzhi" expression="#time" threshold="1"  >
		<Trigger>
			<VariableCommand name="vy" expression="ifelse(ge(#yzhou,1314)*gt(#vy,-#g/2)*lt(#vy,#g/2),0,#vy+#g)"/> 
			<VariableCommand name="yzhou" expression="#yzhou+#vy"/> 
			<VariableCommand name="yzhou" expression="1314" condition="ge(#yzhou,1314)"/> 
			<VariableCommand name="vy" expression="-#vy*0.3" condition="ge(#yzhou,1314)"/> 
		</Trigger>
	</Var>	
	<Var name="kongzhi1" expression="#time" threshold="1"  >
		<Trigger>
			<VariableCommand name="vy1" expression="ifelse(ge(#yzhou1,1331)*gt(#vy1,-#g/2)*lt(#vy1,#g/2),0,#vy1+#g)"/> 
			<VariableCommand name="yzhou1" expression="#yzhou1+#vy1"/> 
			<VariableCommand name="yzhou1" expression="1331" condition="ge(#yzhou1,1331)"/> 
			<VariableCommand name="vy1" expression="-#vy1*0.3" condition="ge(#yzhou1,1331)"/> 
		</Trigger>
	</Var>
	<Var name="kongzhi2" expression="#time" threshold="1"  >
		<Trigger>
			<VariableCommand name="vy2" expression="ifelse(ge(#yzhou2,1342)*gt(#vy2,-#g/2)*lt(#vy2,#g/2),0,#vy2+#g)"/> 
			<VariableCommand name="yzhou2" expression="#yzhou2+#vy2"/> 
			<VariableCommand name="yzhou2" expression="1342" condition="ge(#yzhou2,1342)"/> 
			<VariableCommand name="vy2" expression="-#vy2*0.3" condition="ge(#yzhou2,1342)"/> 
		</Trigger>
	</Var>
	<Var name="kongzhi3" expression="#time" threshold="1"  >
		<Trigger>
			<VariableCommand name="vy3" expression="ifelse(ge(#yzhou3,1334)*gt(#vy3,-#g/2)*lt(#vy3,#g/2),0,#vy3+#g)"/> 
			<VariableCommand name="yzhou3" expression="#yzhou3+#vy3"/> 
			<VariableCommand name="yzhou3" expression="1334" condition="ge(#yzhou3,1334)"/> 
			<VariableCommand name="vy3" expression="-#vy3*0.3" condition="ge(#yzhou3,1334)"/> 
		</Trigger>
	</Var>
	<Var name="kongzhi4" expression="#time" threshold="1"  >
		<Trigger>
			<VariableCommand name="vy4" expression="ifelse(ge(#yzhou4,1138)*gt(#vy4,-#g/2)*lt(#vy4,#g/2),0,#vy4+#g)"/> 
			<VariableCommand name="yzhou4" expression="#yzhou4+#vy4"/> 
			<VariableCommand name="yzhou4" expression="1138" condition="ge(#yzhou4,1138)"/> 
			<VariableCommand name="vy4" expression="-#vy4*0.3" condition="ge(#yzhou4,1138)"/> 
		</Trigger>
	</Var>
	<Var name="kongzhi5" expression="#time" threshold="1"  >
		<Trigger>
			<VariableCommand name="vy5" expression="ifelse(ge(#yzhou5,1163)*gt(#vy5,-#g/2)*lt(#vy5,#g/2),0,#vy5+#g)"/> 
			<VariableCommand name="yzhou5" expression="#yzhou5+#vy5"/> 
			<VariableCommand name="yzhou5" expression="1163" condition="ge(#yzhou5,1163)"/> 
			<VariableCommand name="vy5" expression="-#vy5*0.3" condition="ge(#yzhou5,1163)"/> 
		</Trigger>
	</Var>
	
	<Var name="kongzhi6" expression="#time" threshold="1"  >
		<Trigger>

			<VariableCommand name="movex" expression="#touch_x-#touch_begin_x" condition="#slider"/>
			<VariableCommand name="yd" expression="ifelse(ge(#mx+#movex,860),860,le(#mx+#movex,660),660,#mx+#movex)" condition="#slider"/>
			<VariableCommand name="mx" expression="#yd" condition="not(#slider)"/>


				<VariableCommand name="tmd" expression="(600/200)*#yd-1980"  condition="eq(#bianhua,1)"/>
			<VariableCommand name="dianji" expression="ifelse(ge(#dianji+#dianji2-#dianji1,860),860,le(#dianji+#dianji2-#dianji1,660),660,#dianji+#dianji2-#dianji1)" condition="eq(#bianhua,0)"/>
		</Trigger>
